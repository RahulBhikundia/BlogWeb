<%- include("partials/header.ejs") %> 
<% if(locals.users && locals.num) { %>
<div class="px-5 py-5 my-8">
  <form
    class="container d-flex flex-column align-items-center"
    action=<%=`/submit/${num}`%> 
    method="POST"
  >
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlInput1" class="form-label">Title</label>
      <input
        type="text"
        name="title"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Title"
        fdprocessedid="uf1xgp"
        value="<%= users[num].title %>"
      />
    </div>
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlTextarea1" class="form-label">Body</label>
      <textarea
        name="body"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      >
<%- users[num].body %>
</textarea>
    </div>
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlInput1" class="form-label"
        >Author Name</label
      >
      <input
        type="text"
        name="author"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Name"
        fdprocessedid="uf1xgp"
        value="<%= users[num].author %>"
      />
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

<% } else { %>
<div class="px-5 py-5 my-8">
  <form
    class="container d-flex flex-column align-items-center"
    action="/submit"
    method="POST"
  >
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlInput1" class="form-label">Title</label>
      <input
        type="text"
        name="title"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Title"
        fdprocessedid="uf1xgp"
      />
    </div>
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlTextarea1" class="form-label">Body</label>
      <textarea
        name="body"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
      ></textarea>
    </div>
    <div class="mb-3 col-md-6 col-sm-8 col-11">
      <label for="exampleFormControlInput1" class="form-label"
        >Author Name</label
      >
      <input
        type="text"
        name="author"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Name"
        fdprocessedid="uf1xgp"
      />
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
<% } %> <%- include("partials/footer.ejs") %>
