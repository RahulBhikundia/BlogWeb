<%- include("partials/header.ejs") %>

<% if(locals.num) { %>
  <div class="container d-flex justify-content-center">
    <div class="my-3 px-5 py-5 bg-body rounded shadow-lg col-lg-8">
      <div>
        <a href=<%=`/edit/${users[num].index}`%>>
          <button type="button" class="btn btn-secondary" fdprocessedid="115l9i">
            <i class="bi bi-pencil-fill"></i>
          </button>
        </a>
          <button id="<%= num %>" type="button" class="unique btn btn-secondary mx-2" fdprocessedid="1td3sl" data-toggle="modal" data-target="#exampleModal" data-index="<%= num %>">
            <i class="bi bi-trash3"></i>
          </button>
      </div>
      <h1><%= users[num].title %></h1>
      <p><%= users[num].body %></p>
      <p><%= users[num].author %></p>
    </div>
  </div>
<% }else if(users.length === 0) { %>
  <div class="container d-flex justify-content-center text-center">
    <div class="my-3 px-3 py-3 bg-body rounded shadow-lg col-lg-6">
      <p class="pb-3 mb-0 small lh-sm">
        <strong class="d-block text-gray-dark my-2">No Blogs Available Yet</strong>
        It looks like we don't have any blogs to read at the moment. Check back soon for new content, or explore our other sections for more interesting reads!
      </p>
    </div>
  </div>
<% } else { %>
  <div class="container d-flex justify-content-center">
    <div class="my-3 px-3 py-3 bg-body rounded shadow-lg col-lg-11 col-md-11 col-sm-11 col-10">
      <h6 class="border-bottom pb-2 mb-0">Explore Our Blogs</h6>
      <% users.forEach(user => { %>
          <a href="/<%=user.index%>" style="text-decoration: none;">
          <div class="blog d-flex text-body-secondary border-bottom pt-3 " style="height: 100px;">
              <p class="pb-3 mb-0 small lh-sm">
                <strong class="d-block text-gray-dark"><%= user.title %></strong>
                <%= user.body %>
                <em class="d-block py-2 text-gray-dark">by <%= user.author %></em>
              </p>
          </div>
        </a>
      <% }); %> 
      
      </div>
    </div>
  </div>
<% } %>

<%- include("partials/modal.ejs") %>
<%- include("partials/footer.ejs") %>